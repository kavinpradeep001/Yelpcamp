<% include ../hf/header %>
<div class="container" style="width: 75%">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <ul class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img src="<%= fyelp.image %>" class="card-img-top">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a href=""><h3 class="card-title"><%= fyelp.name %></h3></a>
                        <h4 class="pull-right">$9.00/night</h4>  
                    </div> 
                    <p><em>Submitted by <%= fyelp.author.username %></em></p>
                    <p class="card-text"><%- fyelp.desc %></p>
                    
                    <% if(currentUser && currentUser._id.equals(fyelp.author.id)){ %>
                        <div class="d-flex">
                            <a href="/campaign/<%= fyelp._id %>/edit" class="btn btn-warning mr-2">Edit</a>
                            <form action="/campaign/<%= fyelp._id %>/delete" method="post"><button class="btn btn-danger">Delete</button></form>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="jumbotron"  style="padding: 0">
                <div style="padding: 20px 32px 0 32px">
                    <div class="d-flex justify-content-end" style="padding-top: 0">
                        <a href="/campaign/<%= fyelp._id %>/comment/new" class="btn btn-success">Leave a Review</a>
                    </div>
                </div>
                <hr>
                <div style="padding: 0 32px 20px 32px">
                    <% fyelp["comments"].forEach(function(com) { %>
                        <div class="d-flex justify-content-between" style="height: 30px">
                            <p><strong><%= com.author.username %></strong></p>
                            <p style="font-size: .7rem">10 days ago</p>   
                        </div>
                        <p class="mb-1"><%= com.text %></p>
                        <div class="d-flex mb-3">
                            <% if(currentUser && com.author.id.equals(currentUser._id)) { %>
                                <a href="/campaign/<%= fyelp._id %>/comment/<%= com._id %>/edit" class="btn btn-light btn-sm mr-2">Edit</a>
                                <form action="/campaign/<%= fyelp._id %>/comment/<%= com._id %>/delete" method="post"><button class="btn btn-dark btn-sm">Delete</button></form>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../hf/footer %>
