<% include ../hf/header %>
<div class="text-center display-3 mb-3" style="font-weight: 400">Edit <%= camp.name %></div>
<div style="width: 30%" class="mx-auto">
        <form action="/campaign/<%= camp._id %>/edit" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" value="<%= camp.name %>"  name="name"  style="width: 100%">
            </div>
            <div class="form-group">  
                <input type="text" class="form-control" value="<%= camp.image %>" name="image">
            </div>
            <div class="form-group">  
                <textarea class="form-control" placeholder="Description" name="desc"><%= camp.desc %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Add</button>
            </div>
        </form>
        <div class="d-flex justify-content-center">
            <a href="/campaign"><button class="btn btn-danger mx-auto">Go Back</button></a>
        </div>
</div>
<% include ../hf/footer %>
