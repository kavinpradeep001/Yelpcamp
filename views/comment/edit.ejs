<% include ../hf/header %>
<div class="text-center display-3 mb-3" style="font-weight: 400">Edit comment</div>
<div style="width: 30%" class="mx-auto">
        <form action="/campaign/<%= camp_id %>/comment/<%= comment._id %>" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" value="<%= comment.text %>" name="text">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Add</button>
            </div>
        </form>
        <div class="d-flex justify-content-center">
            <a href="/campaign"><button class="btn btn-danger mx-auto">Go Back</button></a>
        </div>
</div>
<% include ../hf/footer %>
